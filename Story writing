<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Storybook Maker</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            text-align: center;
            margin: 20px;
            background-color: pink;
        }
        h1 {
            color: blue;
            text-align: center;
        }
        canvas {
            border: 1px solid #000;
        }
        textarea {
            width: 80%;
            height: 100px;
            margin: 10px;
        }
        #saveButton {
            margin: 10px;
            padding: 10px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <h1>Storybook Maker</h1>
    <canvas id="canvas" width="400" height="400"></canvas>
    <textarea id="storyText" placeholder="Write your story here..."></textarea>
    <button id="saveButton">Save Story</button>

    <button type="button" onclick="displayDateTime()">Click to display Date and Time.</button>
    <p id="demo"></p>

    <script>
        const canvas = document.getElementById('canvas');
        const ctx = canvas.getContext('2d');
        const storyText = document.getElementById('storyText');
        const saveButton = document.getElementById('saveButton');

        // Initial setup
        ctx.lineWidth = 3;
        ctx.lineJoin = 'round';
        ctx.lineCap = 'round';
        ctx.strokeStyle = '#000';

        let isDrawing = false;

        function startDrawing(e) {
            isDrawing = true;
            draw(e);
        }

        function stopDrawing() {
            isDrawing = false;
            ctx.beginPath();
        }

        function draw(e) {
            if (!isDrawing) return;

            ctx.lineTo(e.clientX - canvas.offsetLeft, e.clientY - canvas.offsetTop);
            ctx.stroke();
            ctx.beginPath();
            ctx.moveTo(e.clientX - canvas.offsetLeft, e.clientY - canvas.offsetTop);
        }

        function saveStory() {
            const imageData = canvas.toDataURL(); // Convert canvas to base64 image data
            const storyContent = storyText.value;

            // For demonstration purposes, display the result in the 'demo' paragraph
            document.getElementById('demo').innerHTML = `Saving Story: ${JSON.stringify({ imageData, storyContent })}`;
        }

        function displayDateTime() {
            document.getElementById('demo').innerHTML = `Current Date and Time: ${Date()}`;
        }

        // Event listeners
        canvas.addEventListener('mousedown', startDrawing);
        canvas.addEventListener('mousemove', draw);
        canvas.addEventListener('mouseup', stopDrawing);
        canvas.addEventListener('mouseout', stopDrawing);

        saveButton.addEventListener('click', saveStory);
    </script>
</body>
</html>
